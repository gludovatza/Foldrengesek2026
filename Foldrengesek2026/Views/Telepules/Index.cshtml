@model IEnumerable<Foldrengesek2026.Models.Telepules>

@{
    ViewData["Title"] = "Index";

    int currentPage = (int)ViewData["CurrentPage"]!;
    int totalPages = (int)ViewData["TotalPages"]!;

    int totalCount = (int)ViewData["TotalCount"]!;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <p>
        Szűrők:
        <input type="text" name="nev" value="@ViewData["AktualisNevSzuro"]" placeholder="településnév" />
        <input type="text" name="varmegye" value="@ViewData["AktualisVarmegyeSzuro"]" placeholder="vármegye" />
        <input type="submit" value="Keresés" class="btn btn-primary" />
    </p>
</form>
<p>Összesen: <strong>@totalCount</strong> találat.</p>
<nav>
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-nev="@ViewData["AktualisNevSzuro"]"
                   asp-route-varmegye="@ViewData["AktualisVarmegyeSzuro"]">
                    Előző
                </a>
            </li>
        }

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-nev="@ViewData["AktualisNevSzuro"]"
                   asp-route-varmegye="@ViewData["AktualisVarmegyeSzuro"]">
                    @i
                </a>
            </li>
        }

        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-nev="@ViewData["AktualisNevSzuro"]"
                   asp-route-varmegye="@ViewData["AktualisVarmegyeSzuro"]">
                    Következő
                </a>
            </li>
        }
    </ul>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Varmegye)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Varmegye)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
