@model IEnumerable<Foldrengesek2026.Models.Telepules>

@{
    ViewData["Title"] = "Index";

    int currentPage = (int)ViewData["CurrentPage"]!;
    int totalPages = (int)ViewData["TotalPages"]!;

    int totalCount = (int)ViewData["TotalCount"]!;

    string ToggleDir(string column)
    => (ViewData["CurrentSort"]?.ToString() == column &&
        ViewData["CurrentDir"]?.ToString() == "asc")
       ? "desc"
       : "asc";

    string SortIcon(string column)
    {
        if (ViewData["CurrentSort"]?.ToString() != column)
            return "";

        return ViewData["CurrentDir"]?.ToString() == "asc"
            ? " ▲"
            : " ▼";
    }
}

<h1>Index</h1>

@if (User.IsInRole("User") || User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<form asp-action="Index" method="get">
    <p>
        Szűrők:
        <input type="text" name="nev" value="@ViewData["AktualisNevSzuro"]" placeholder="településnév" />
        <input type="text" name="varmegye" value="@ViewData["AktualisVarmegyeSzuro"]" placeholder="vármegye" />
        <input type="submit" value="Keresés" class="btn btn-primary" />
    </p>
</form>
<p>Összesen: <strong>@totalCount</strong> találat.</p>
<nav>
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-nev="@ViewData["AktualisNevSzuro"]"
                   asp-route-varmegye="@ViewData["AktualisVarmegyeSzuro"]"
                   asp-route-sort="@ViewData["CurrentSort"]"
                   asp-route-dir="@ViewData["CurrentDir"]">
                    Előző
                </a>
            </li>
        }

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-nev="@ViewData["AktualisNevSzuro"]"
                   asp-route-varmegye="@ViewData["AktualisVarmegyeSzuro"]"
                   asp-route-sort="@ViewData["CurrentSort"]"
                   asp-route-dir="@ViewData["CurrentDir"]">
                    @i
                </a>
            </li>
        }

        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-nev="@ViewData["AktualisNevSzuro"]"
                   asp-route-varmegye="@ViewData["AktualisVarmegyeSzuro"]"
                   asp-route-sort="@ViewData["CurrentSort"]"
                   asp-route-dir="@ViewData["CurrentDir"]">
                    Következő
                </a>
            </li>
        }
    </ul>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-page="@currentPage"
                   asp-route-nev="@ViewData["AktualisNevSzuro"]"
                   asp-route-varmegye="@ViewData["AktualisVarmegyeSzuro"]"
                   asp-route-sort="nev"
                   asp-route-dir="@ToggleDir("nev")">
                    @Html.DisplayNameFor(model => model.Nev) @SortIcon("nev")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-page="@currentPage"
                   asp-route-nev="@ViewData["AktualisNevSzuro"]"
                   asp-route-varmegye="@ViewData["AktualisVarmegyeSzuro"]"
                   asp-route-sort="varmegye"
                   asp-route-dir="@ToggleDir("varmegye")">
                    @Html.DisplayNameFor(model => model.Varmegye) @SortIcon("varmegye")
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Varmegye)
            </td>
            <td>
                <partial name="_CrudLinks" model="@item.ID" />
            </td>
        </tr>
}
    </tbody>
</table>
