@model Foldrengesek2026.Models.Naplo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Naplo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ido" class="control-label"></label>
                <input asp-for="Ido" class="form-control" />
                <span asp-validation-for="Ido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Magnitudo" class="control-label"></label>
                <input asp-for="Magnitudo" class="form-control" />
                <span asp-validation-for="Magnitudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Intenzitas" class="control-label"></label>
                <input asp-for="Intenzitas" class="form-control" />
                <span asp-validation-for="Intenzitas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelepulesID" class="control-label"></label>
                <select asp-for="TelepulesID" class ="form-control" asp-items="ViewBag.TelepulesID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // hu-HU: tizedesvessző kezelése a jQuery Validate-ben
        // Elfogad: 1,1 | -12,34 stb.
        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?\d+(?:[,]\d+)?$/.test(value);
        };
    </script>
}
